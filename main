-- Load Kavo UI
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptco/KnifeHub/main/UILib.lua"))()
local Window = Library.CreateLib("StudLand V2 - Tool Loops", "Ocean")

local toolLoops = {}
local toggles = {}
local toolNames = {
    "Clockwork Hammer",
    "Scarletsteel Pickaxe",
    "Steel Axe",
    "Steel Shovel",
    "Pruning Shears"
}

-- Create Tab
local tab = Window:NewTab("Auto Use")
local section = tab:NewSection("Toggle Tool Auto-Use")

-- Create toggle for each tool
for _, toolName in pairs(toolNames) do
    toolLoops[toolName] = false
    section:NewToggle(toolName, "Auto use " .. toolName, function(state)
        toolLoops[toolName] = state
    end)
end

-- Combo toggle
local comboLoop = false
section:NewToggle("Combo Mode", "Loop all tools at once", function(state)
    comboLoop = state
end)

-- Loop execution
task.spawn(function()
    while task.wait(0.1) do
        local char = game.Players.LocalPlayer.Character
        if comboLoop then
            for _, toolName in pairs(toolNames) do
                local tool = char and char:FindFirstChild(toolName)
                if tool then
                    workspace.Remotes.UseItem:FireServer(tool, false)
                end
            end
        else
            for _, toolName in pairs(toolNames) do
                if toolLoops[toolName] then
                    local tool = char and char:FindFirstChild(toolName)
                    if tool then
                        workspace.Remotes.UseItem:FireServer(tool, false)
                    end
                end
            end
        end
    end
end)

-- Optional: Add tabs for utilities
local miscTab = Window:NewTab("Utilities")
local miscSec = miscTab:NewSection("Extras")
miscSec:NewButton("SimpleSpy", "Load Remote Spy", function()
    loadstring(game:HttpGet("https://github.com/exxtremestuffs/SimpleSpySource/raw/master/SimpleSpy.lua"))()
end)
miscSec:NewButton("Infinite Yield", "Load Admin Commands", function()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
end)
